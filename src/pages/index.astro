    .intro h2 {
      font-size: 2rem;
      margin-bottom: 15px;
      color: #007BFF;
    }

    .benefits {
      background-color: white;
      max-width: 800px;
      margin: 0 auto;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
