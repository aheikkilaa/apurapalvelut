  <form action="https://formspree.io/f/your-form-id" method="POST">
    <input type="text" name="name" placeholder="Nimesi" required />
    <input type="email" name="email" placeholder="Sähköposti" required />
    <input type="text" name="phone" placeholder="Puhelinnumero" required />
    <input type="number" name="windows" placeholder="Ikkunoiden määrä" required />
    <textarea name="message" placeholder="Lisätietoja tai toiveita" rows="4"></textarea>
    <button type="submit">Lähetä tarjouspyyntö</button>
  </form>
</section>

<footer>
